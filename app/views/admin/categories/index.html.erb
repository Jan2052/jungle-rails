<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; All Categories</h1>
  </header>

<%= link_to "New Category", new_admin_category_path, class: 'btn btn-info' %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <th><%= category.id %></th>
          <th><%= category.name %></th>
        </tr>
      <% end %>
    </tbody>
  </table>




</section>